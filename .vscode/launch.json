    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug training",
            "type": "debugpy",
            "module": "accelerate.commands.launch",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "--multi_gpu",
                "--num_processes", "1",
                // "--num_processes", "2",
                "--main_process_port", "12345",
                // "${file}",
                "${workspaceFolder}/train_cls.py",
                "--model_name_or_path", "camembert-base",
                "--train_files", "data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-medline-train-cls-mistral_large_instruct_2407-processed.jsonl",
                "--validation_files", "data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-medline-validation-cls-mistral_large_instruct_2407-processed.jsonl",
                "--max_train_samples", "32",
                "--max_eval_samples", "32",
                "--shuffle_train_dataset", "True",
                // "--metric_name", "f1",
                "--text_column_name", "text",
                "--label_column_name", "labels",
                // "--criterion_name", "pos-weighted-bce",
                "--criterion_name", "fl",
                "--do_train", "True",
                "--do_eval", "True",
                "--max_seq_length", "512",
                "--per_device_train_batch_size", "4",
                "--learning_rate", "2e-5",
                "--num_train_epochs", "1",
                // "--max_steps", "16",
                "--warmup_steps", "1",
                "--output_dir", "tmp_debug",
                "--report_to", "tensorboard",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "4,5",
                "HF_HOME": "/projects/bhuang/.cache/huggingface",
                "WANDB_DISABLED": "true",
            }
        },
        {
            "name": "Debug distillation",
            "type": "debugpy",
            "module": "accelerate.commands.launch",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--num_processes", "1",
                // "--num_processes", "2",
                "--mixed_precision", "fp16",
                "--main_process_port", "12345",
                // "${file}",
                "${workspaceFolder}/distil_cls.py",
                "--model_name_or_path", "outputs/quaero/drbert_7gb_ft_ep100_bs32_lr5e5_cosine_ntr-fl-max_spaced2-init",
                "--teacher_model_name_or_path", "outputs/quaero/drbert_7gb_ft_ep100_bs32_lr5e5_cosine_ntr-fl",
                "--train_files", "data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-medline-train-cls-mistral_large_instruct_2407-processed.jsonl+data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-emea-train-cls-mistral_large_instruct_2407-processed.jsonl",
                "--validation_files", "data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-medline-validation-cls-mistral_large_instruct_2407-processed.jsonl+data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-emea-validation-cls-mistral_large_instruct_2407-processed.jsonl",
                "--test_files", "data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-medline-test-cls-mistral_large_instruct_2407-processed.jsonl+data/quaero_icd10_by_category_resplitted/drbenchmark_quaero-emea-test-cls-mistral_large_instruct_2407-processed.jsonl",
                "--max_train_samples", "32",
                "--max_eval_samples", "32",
                "--text_column_name", "text",
                "--label_column_name", "labels",
                "--max_seq_length", "512",
                "--pad_to_multiple_of", "64",
                "--shuffle_train_dataset", "True",
                "--output_dir", "tmp_debug",
                "--checkpointing_steps", "epoch",
                "--save_total_limit", "1",
                // "--criterion_name", "fl",
                "--criterion_name", "ntr",
                "--temperature", "2",
                "--kl_weight", "0.5",
                "--dtype", "float16",
                "--num_train_epochs", "3",
                "--per_device_train_batch_size", "4",
                "--per_device_eval_batch_size", "4",
                "--learning_rate", "2e-5",
                // "--max_steps", "16",
                "--warmup_steps", "1",
                "--report_to", "tensorboard",
                "--do_train", "True",
                "--do_eval", "True",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "5",
                "HF_HOME": "/projects/bhuang/.cache/huggingface",
                "WANDB_DISABLED": "true",
            }
        }
    ]
}